@inherits LayoutComponentBase

<PageTitle>Lototo</PageTitle>

<div class="wrapper">

    <!-- Preloader -->
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark bg-pw-blue">

        <!-- Left navbar (info: data, planta, usuário) -->
        <ul class="navbar-nav">
            <!-- Data -->
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">
                    <i class="far fa-calendar-alt mr-1"></i>
                    @DateTime.Now.ToString("dd/MM/yyyy")
                </span>
            </li>

            <!-- Planta -->
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">
                    <i class="fas fa-map-marker-alt mr-1"></i>
                    @PlantaAtual
                </span>
            </li>

            <!-- Usuário -->
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">
                    <i class="fas fa-user-circle mr-1"></i>
                    @UserName
                </span>
            </li>
        </ul>

        <!-- Right navbar (colapsar + sair) -->
        <ul class="navbar-nav ml-auto">

            <!-- Botão de colapsar sidebar AGORA NA DIREITA -->
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
            </li>

            <!-- Botão de saída -->
            <li class="nav-item">
                <a class="nav-link" data-slide="true" href="/" role="button" title="Sair">
                    <i class="fas fa-door-open"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar bg-seugarcom elevation-3">
        <!-- Brand Logo -->

        <!-- Sidebar -->
        <div class="sidebar bg-seugarcom">
            <!-- Sidebar user panel (optional) -->
            <div class="sidebar-brand d-flex flex-column align-items-center pb-2 border-bottom">
                <img src="images/CN.png" class="brand-image mb-4 mt-3" width="200" />
            </div>

            <!-- SidebarSearch Form -->
            @*             <div class="form-inline">
                <div class="input-group" data-widget="sidebar-search">
                    <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-sidebar">
                            <i class="fas fa-search fa-fw"></i>
                        </button>
                    </div>
                </div>
            </div> *@

            <!-- Sidebar Menu -->
            <nav class="mt-2" >
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                    <li class="nav-item">
                        <a href="/garcom" class="nav-link">
                            <i class="nav-icon fas fa-cog"></i>
                            <p>
                                Equipamentos
                            </p>
                        </a>
                    </li>

                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">

        @Body
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer" style="background-color: #006CB5; color: white;">
        Power Wave Solutions - 
        <i class="nav-icon fas fa-cog"></i>
         Lototo
        <div class="float-right d-none d-sm-inline-block">

        </div>
    </footer>

</div>
@code {
    private string PlantaAtual { get; set; } = "Planta Matozinhos";
    private string UserName { get; set; } = "Leandro Vaz"; // ou vindo do login/claims
}