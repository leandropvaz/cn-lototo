@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private string PlantaAtual { get; set; } = "";
    private string UserName { get; set; } = "";

    private bool IsAdmin { get; set; }
    private bool IsSuperGestor { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (AuthenticationStateTask is null)
        {
            UserName = "";
            PlantaAtual = "";
            IsAdmin = false;
            IsSuperGestor = false;
            return;
        }

        var authState = await AuthenticationStateTask;
        var user = authState.User;

        if (user.Identity is { IsAuthenticated: true })
        {
            UserName = user.Identity.Name ?? "";

            var plantaId = user.FindFirst("plantaId")?.Value;
            PlantaAtual = !string.IsNullOrWhiteSpace(plantaId)
                ? $"Planta {plantaId}"
                : "Sem planta";

            IsAdmin = user.IsInRole("Administrador");
            IsSuperGestor = user.IsInRole("SuperGestor");
        }
        else
        {
            UserName = "";
            PlantaAtual = "";
            IsAdmin = false;
            IsSuperGestor = false;
        }
    }
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Nav.NavigateTo("/", forceLoad: true); // volta para o login limpando tudo
    }
}
