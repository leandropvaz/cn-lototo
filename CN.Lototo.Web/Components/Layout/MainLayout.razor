@using CN.Lototo.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inherits LayoutComponentBase
@inject AuthService AuthService
@inject NavigationManager Nav

<PageTitle>Lototo</PageTitle>

<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-dark bg-pw-blue">

        <!-- Left navbar (info: data, planta, usuário) -->
        <ul class="navbar-nav">
            <!-- Data -->
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">
                    <i class="far fa-calendar-alt mr-1"></i>
                    @DateTime.Now.ToString("dd/MM/yyyy")
                </span>
            </li>

            <!-- Planta -->
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">
                    <i class="fas fa-map-marker-alt mr-1"></i>
                    @PlantaAtual
                </span>
            </li>

            <!-- Usuário -->
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">
                    <i class="fas fa-user-circle mr-1"></i>
                    @UserName
                </span>
            </li>
        </ul>

        <!-- Right navbar (colapsar + sair) -->
        <ul class="navbar-nav ml-auto">

            <!-- Botão de colapsar sidebar -->
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
            </li>

            <!-- Botão de saída -->
            <li class="nav-item">
                <a class="nav-link" href="#" @onclick="Logout" role="button" title="Sair">
                    <i class="fas fa-door-open"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar bg-seugarcom elevation-3">
        <div class="sidebar bg-seugarcom">
            <!-- Logo -->
            <div class="sidebar-brand d-flex flex-column align-items-center pb-2 border-bottom">
                <img src="images/CN.png" class="brand-image mb-4 mt-3" width="200" />
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                    <!-- MENU: Equipamentos (todos que tiverem acesso veem) -->
                    <li class="nav-item">
                        <a href="/home" class="nav-link">
                            <i class="nav-icon fas fa-tools"></i>
                            <p>Equipamentos</p>
                        </a>

                        @if (IsAdmin || IsSuperGestor)
                        {
                            <a href="/equipamentos" class="nav-link ml-4">
                                <i class="fas fa-plus nav-icon"></i>
                                <p style="margin-left: 4px;">Cadastrar / Importar</p>
                            </a>
                        }
                    </li>


                    <!-- MENUS ESPECÍFICOS PARA ADMINISTRADOR -->
                    @if (IsAdmin || IsSuperGestor)
                    {
                        <!-- Usuário do sistema -->
                        <li class="nav-item">
                            <a href="/usuarios" class="nav-link">
                                <i class="nav-icon fas fa-users-cog"></i>
                                <p>
                                    Usuários

                                </p>
                            </a>
                        </li>
                    }

                    <!-- MENUS ESPECÍFICOS PARA SUPER GESTOR -->
                    @if (IsAdmin || IsSuperGestor)
                    {
                        <!-- Planta -->
                        <li class="nav-item">
                            <a href="/plantas" class="nav-link">
                                <i class="nav-icon fas fa-industry"></i>
                                <p>
                                    Plantas
                                </p>
                            </a>
                        </li>

                        <!-- Usuário ADM -->
                       @*  <li class="nav-item">
                            <a href="/usuarios-adm" class="nav-link">
                                <i class="nav-icon fas fa-user-shield"></i>
                                <p>
                                    Usuários ADM
                                </p>
                            </a>
                        </li> *@
                    }

                </ul>
            </nav>
        </div>
    </aside>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        @Body
    </div>

    <!-- Footer -->
    <footer class="main-footer" style="background-color: #006CB5; color: white;">
        Power Wave Solutions -
        <i class="nav-icon fas fa-cog"></i>
        Lototo
        <div class="float-right d-none d-sm-inline-block">
        </div>
    </footer>

</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private string PlantaAtual { get; set; } = "";
    private string UserName { get; set; } = "";

    private bool IsAdmin { get; set; }
    private bool IsSuperGestor { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        if (AuthenticationStateTask is null)
        {
            UserName = "";
            PlantaAtual = "";
            IsAdmin = false;
            IsSuperGestor = false;
            return;
        }

        var authState = await AuthenticationStateTask;
        var user = authState.User;

        if (user.Identity is { IsAuthenticated: true })
        {
            UserName = user.Identity.Name ?? "";

            var plantaId = user.FindFirst("plantaId")?.Value;
            PlantaAtual = !string.IsNullOrWhiteSpace(plantaId)
                ? $"Planta {plantaId}"
                : "Sem planta";

            IsAdmin = user.IsInRole("Administrador");
            IsSuperGestor = user.IsInRole("SuperGestor");
        }
        else
        {
            UserName = "";
            PlantaAtual = "";
            IsAdmin = false;
            IsSuperGestor = false;
        }
    }
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Nav.NavigateTo("/", forceLoad: true); // volta para o login limpando tudo
    }
}
