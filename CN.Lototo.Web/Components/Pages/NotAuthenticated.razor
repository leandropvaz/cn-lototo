@page "/restricted"
@layout EmptyLayout

@inject NavigationManager Nav

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">

            <div class="card shadow-lg border-warning">
                <div class="card-header bg-warning text-dark d-flex align-items-center">
                    <i class="fas fa-user-lock mr-2"></i>
                    <h5 class="mb-0">Sessão não autenticada</h5>
                </div>

                <div class="card-body">
                    <p>
                        Não foi possível validar a sua sessão.
                        Pode ter ocorrido um timeout ou ainda não efetuou login.
                    </p>
                    <p>
                        Por favor faça login novamente para continuar a utilizar o sistema.
                    </p>

                    <button class="btn btn-primary btn-block mt-2"
                            @onclick="IrParaLogin">
                        <i class="fas fa-sign-in-alt mr-1"></i>
                        Ir para a página de login
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

@code {
    private void IrParaLogin()
    {
        Nav.NavigateTo("/", forceLoad: true); // assuming "/" é tua tela de login
    }
}
